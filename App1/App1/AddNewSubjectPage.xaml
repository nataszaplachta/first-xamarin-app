<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.AddNewSubject">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Spacing="15">
                <Label Text="Dodajesz nowy przedmiot"
                   FontSize="Large"
                   VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
                <Entry x:Name="entryName" Placeholder="Nazwa" />
                <Button Margin="0, 50" Text="Dodaj przedmiot" Clicked="Button_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>